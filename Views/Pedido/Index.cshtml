@model List<Pedido>
@{
    ViewData["Title"] = "Pedidos";
    ViewData["SubTitle"] = "Listado";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<div class="row small">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <form asp-action="Index" method="get">
            <div class="input-group input-group-sm mb-3">
                <input name="s" id="s" value="@ViewBag.search" type="search" class="form-control"
                       placeholder="Buscar por ID o estado">
                <button class="btn btn-primary" type="submit" title="Buscar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row small mb-3">
    <div class="col">
        <!-- Por si le metemo cositas al admin -->
    </div>
    <div class="col text-end">
        Mostrando @Model.Count() elementos
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered small">
            <thead class="text-center">
                <tr>
                    <th width="1%">
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th width="10%">
                        @Html.DisplayNameFor(model => model.First().FechaCreacion)
                    </th>
                    <th>
                        Items
                    </th>
                    <th width="10%">
                        @Html.DisplayNameFor(model => model.First().Estado)
                    </th>
                    <th width="15%">
                        @Html.DisplayNameFor(model => model.First().Total)
                    </th>
                    <th width="8%">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @if (item.Items != null && item.Items.Any())
                            {
                                @foreach (var pedidoItem in item.Items.Take(3))
                                {
                                    <div class="d-flex align-items-center mb-1">
                                        @if (pedidoItem.Producto != null)
                                        {
                                            <img src="@(pedidoItem.Producto.ArchivoId == null ? "https://via.placeholder.com/20x20" : $"{ViewBag.Url}/api/archivos/{pedidoItem.Producto.ArchivoId}")"
                                                 alt="@pedidoItem.Producto.Titulo"
                                                 class="img-fluid img-thumbnail me-2"
                                                 style="max-height: 20px; max-width: 20px;" />
                                            <small>@pedidoItem.Producto.Titulo (@pedidoItem.Cantidad)</small>
                                        }
                                        else
                                        {
                                            <small>Producto ID: @pedidoItem.ProductoId (x@pedidoItem.Cantidad)</small>
                                        }
                                    </div>
                                }
                                @if (item.Items.Count > 3)
                                {
                                    <small class="text-muted">y @(item.Items.Count - 3) más...</small>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Sin items</span>
                            }
                    </td>
                    <td class="text-center">
                        <span class="badge rounded-pill
                                    @(item.Estado == "pendiente" ? "text-bg-warning" :
                                                                item.Estado == "completado" ? "text-bg-success" :
                                                                item.Estado == "cancelado" ? "text-bg-danger" : "text-bg-secondary")">
                        @item.Estado
                    </span>
                </td>
                <td class="text-end">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td class="text-center">
                    <a class="text-decoration-none small text-uppercase" asp-action="Detalle"
                       asp-route-id="@item.Id">Detalle</a>
                </td>
            </tr>
                        }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            No se han encontrado pedidos.
            <a asp-controller="Comprar" asp-action="Index" class="alert-link">¡Comience a comprar ahora!</a>
        </div>
    </div>
}
