@model UsuarioPwd
@{
    ViewData["Title"] = "Crear cuenta";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<form asp-action="Crear" method="post">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="h3 text-center">Bienvenido a Mercado Libre</h1>
            <h5 class="card-title text-center mt-4">@ViewData["Title"]</h5>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                <label asp-for="Nombre" class="form-label"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <p class="card-text small">Complete la información para crear su cuenta en la plataforma.</p>
            <p class="card-text small text-end"><a asp-action="Index" class="link-primary text-decoration-none">¿Ya tienes cuenta?</a></p>
        </div>

        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Crear cuenta</button>
        </div>
    </div>
</form>