@model CarritoItem
@{
    ViewData["Title"] = "Carrito";
    ViewData["SubTitle"] = "Remover producto";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item">
            <a class="text-decoration-none" title="Regresar al carrito" asp-action="Index">Carrito</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<div class="alert alert-warning" role="alert">
    <strong>¿Está seguro que desea remover este producto del carrito?</strong>
</div>

@if (Model?.Producto != null)
{
    <div class="card">
        <div class="row g-0">
            <div class="col-md-3 text-center bg-white pt-3">
                <img src="@(Model.Producto.ArchivoId == null ? "https://via.placeholder.com/200x150" : $"{ViewBag.Url}/api/archivos/{Model.Producto.ArchivoId}")"
                     alt="@Model.Producto.Titulo" class="img-fluid" style="max-height: 150px;">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@Model.Producto.Titulo</h5>
                    <p class="card-text">Cantidad: @Model.Cantidad</p>
                    <p class="card-text">Precio: @Html.DisplayFor(model => model.PrecioUnitario)</p>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center mt-3">
    <form asp-action="RemoverItem" method="post" style="display: inline;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="itemId" value="@Model?.ItemId" />
        <button type="submit" class="btn btn-sm btn-danger">Sí, remover</button>
    </form>
    <a class="btn btn-sm btn-outline-secondary" asp-action="Index" title="Cancelar">Cancelar</a>
</div>